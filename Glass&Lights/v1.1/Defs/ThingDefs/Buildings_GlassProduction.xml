<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="GlassWorksBenchBase" ParentName="BuildingBase" Abstract="True">
    <category>Building</category>
	<thingClass>Building</thingClass>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
	<minifiedDef>MinifiedThing</minifiedDef>
	<thingCategories>
      <li>BuildingsProduction</li>
    </thingCategories>
	<statBases>
      <Mass>20</Mass>
    </statBases>
    <interactionCellIcon>DiningChair</interactionCellIcon>
	<comps>
		<li>
			<compClass>CompReportWorkSpeed</compClass>
		</li>
	</comps>
	<placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>PlaceWorker_ReportWorkSpeedPenalties</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
  </ThingDef>

	<ThingDef ParentName="GlassWorksBenchBase">
		<defName>GlassworkTable</defName>
		<label>electric glassworks</label>
		<thingClass>Building_WorkTable</thingClass>
		<description>A table with all the tools you need to make glass, and it runs off of electricity.</description>
		<graphicData>
			<texPath>Things/Building/Production/GlassworkTable/GlassworkTable</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(2.4,1.4)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<costList>
				<Steel>60</Steel>
				<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
		<altitudeLayer>Building</altitudeLayer>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<WorkToBuild>2000</WorkToBuild>
			<MaxHitPoints>160</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<Cleanliness>-6</Cleanliness>
		</statBases>
		<size>(2,1)</size>
		<surfaceType>Item</surfaceType>
		<designationCategory>Production</designationCategory>
		<passability>PassThroughOnly</passability>
		<pathCost>70</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(1,0,-1)</interactionCellOffset>
		<recipes>
			<li>MakeGlass</li>
			<li>MakeCircularGlass</li>
			<li>MakeMolotov</li>
		</recipes>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>200</basePowerConsumption>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>ToolCabinet</li>
				</linkableFacilities>
			</li>
			<li Class="CompProperties_Glower">
				<glowRadius>2</glowRadius>
				<glowColor>(210,112,33,0)</glowColor>
			</li>
			<li Class="CompProperties_HeatPusher">
				<compClass>CompHeatPusherPowered</compClass>
				<heatPerSecond>8</heatPerSecond>
			</li>
			<li Class="CompProperties_Breakdownable"/>
		</comps>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
			<heatPerTickWhileWorking>3</heatPerTickWhileWorking>
		</building>
		<researchPrerequisites>
			<li>GlassworksResearch</li>
			<li>Electricity</li>
		</researchPrerequisites>
	</ThingDef>
	
		<ThingDef ParentName="GlassWorksBenchBase">
		<defName>FueledGlassworkTable</defName>
		<label>fueled glassworks</label>
		<thingClass>Building_WorkTable</thingClass>
		<description>A fueled glassworks table with all the tools you need to make most glass. Due to inconsistencies with the fuel, round glass can only be made with the electric glassworks table.</description>
		<graphicData>
			<texPath>Things/Building/Production/GlassworkTableFueled/GlassworkTableFueled</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(3.5,1.5)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<costList>
				<Steel>80</Steel>
		</costList>
		<constructEffect>ConstructMetal</constructEffect>
		<altitudeLayer>Building</altitudeLayer>
		<fillPercent>0.5</fillPercent>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<WorkToBuild>2500</WorkToBuild>
			<MaxHitPoints>180</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<Cleanliness>-5</Cleanliness>
		</statBases>
		<size>(3,1)</size>		
		<designationCategory>Production</designationCategory>
		<passability>PassThroughOnly</passability>
		<pathCost>70</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<constructionSkillPrerequisite>4</constructionSkillPrerequisite>
		<recipes>
			<li>MakeGlass</li>
			<li>MakeMolotov</li>
		</recipes>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<comps>
			<li Class="CompProperties_Refuelable">
				<fuelConsumptionRate>100.0</fuelConsumptionRate>
				<fuelCapacity>90.0</fuelCapacity>
				<fuelFilter>
				  <thingDefs>
					<li>WoodLog</li>
				  </thingDefs>
				</fuelFilter>
				<consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
				<showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
			</li>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>ToolCabinet</li>
				</linkableFacilities>
			</li>
			<li Class="CompProperties_Glower">
				<glowRadius>2</glowRadius>
				<glowColor>(210,112,33,0)</glowColor>
			</li>
			<li Class="CompProperties_HeatPusher">
				<compClass>CompHeatPusherPowered</compClass>
				<heatPerSecond>14</heatPerSecond>
			</li>
		</comps>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
			<heatPerTickWhileWorking>10</heatPerTickWhileWorking>
		</building>
		<researchPrerequisites>
			<li>GlassworksResearch</li>
		</researchPrerequisites>
	</ThingDef>
  
  	<ThingDef ParentName="GlassWorksBenchBase">
		<defName>ReinforcedGlassworkTable</defName>
		<label>reinforced glassworks</label>
		<thingClass>Building_WorkTable</thingClass>
		<description>A table used for turning normal glass into safety glass.</description>
		<graphicData>
			<texPath>Things/Building/Production/ReinforcedGlassworkTable/ReinforcedGlassworkTable</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(1,1)</drawSize>
		</graphicData>
		<costList>
				<Steel>40</Steel>
				<Glass>8</Glass>
				<ComponentIndustrial>7</ComponentIndustrial>
		</costList>
		<altitudeLayer>Building</altitudeLayer>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<WorkToBuild>900</WorkToBuild>
			<MaxHitPoints>180</MaxHitPoints>
			<Flammability>1.0</Flammability>
		</statBases>
		<size>(1,1)</size>
		<surfaceType>Item</surfaceType>
		<designationCategory>Production</designationCategory>
		<passability>PassThroughOnly</passability>
		<pathCost>70</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<recipes>
			<li>MakeReinforcedGlass</li>
		</recipes>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>100</basePowerConsumption>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>ToolCabinet</li>
				</linkableFacilities>
			</li>
			<li Class="CompProperties_Glower">
				<glowRadius>1</glowRadius>
				<glowColor>(210,112,33,0)</glowColor>
			</li>
			<li Class="CompProperties_HeatPusher">
				<compClass>CompHeatPusherPowered</compClass>
				<heatPerSecond>12</heatPerSecond>
			</li>
			<li Class="CompProperties_Breakdownable"/>
		</comps>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
			<heatPerTickWhileWorking>0.2</heatPerTickWhileWorking>
		</building>
		<researchPrerequisites>
			<li>ReinforcedGlassResearch</li>
		</researchPrerequisites>
	</ThingDef>

</Defs>