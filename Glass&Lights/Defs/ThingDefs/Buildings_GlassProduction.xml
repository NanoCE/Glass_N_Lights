<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="BuildingBase" Abstract="True">
    <category>Building</category>
	<thingClass>Building</thingClass>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>BrokenGlass</filthLeaving>
  </ThingDef>

	<ThingDef ParentName="BuildingBase">
		<defName>GlassworkTable</defName>
		<label>electric glassworks</label>
		<thingClass>Building_WorkTable</thingClass>
		<description>A table with all the tools you need to make glass, and it runs off of electricity.</description>
		<graphicData>
			<texPath>Things/Building/Production/GlassworkTable</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(2,1)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<costList>
				<Steel>60</Steel>
				<Component>2</Component>
		</costList>
		<altitudeLayer>Building</altitudeLayer>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<WorkToBuild>1300</WorkToBuild>
			<MaxHitPoints>180</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<Cleanliness>-6</Cleanliness>
		</statBases>
		<size>(2,1)</size>
		<surfaceType>Item</surfaceType>
		<designationCategory>Production</designationCategory>
		<passability>PassThroughOnly</passability>
		<pathCost>70</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<recipes>
			<li>MakeGlass</li>
			<li>MakeCircularGlass</li>
			<li>MakeMolotov</li>
		</recipes>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<startElectricalFires>true</startElectricalFires>
				<basePowerConsumption>200</basePowerConsumption>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>ToolCabinet</li>
				</linkableFacilities>
			</li>
			<li Class="CompProperties_Glower">
				<glowRadius>2</glowRadius>
				<glowColor>(210,112,33,0)</glowColor>
			</li>
			<li Class="CompProperties_HeatPusher">
				<compClass>CompHeatPusherPowered</compClass>
				<heatPerSecond>10</heatPerSecond>
			</li>
			<li Class="CompProperties_Breakdownable"/>
		</comps>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
			<heatPerTickWhileWorking>0.5</heatPerTickWhileWorking>
		</building>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
		<researchPrerequisites>
			<li>GlassworksResearch</li>
			<li>ElectricSmelting</li>
		</researchPrerequisites>
	</ThingDef>
	
		<ThingDef ParentName="BuildingBase">
		<defName>FueledGlassworkTable</defName>
		<label>fueled glassworks</label>
		<thingClass>Building_WorkTable</thingClass>
		<description>A table with all the tools you need to make glass. Uses fuel instead of electricity.</description>
		<graphicData>
			<texPath>Things/Building/Production/GlassworkTableFueled</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(3.5,1.5)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<costList>
				<Steel>60</Steel>
				<Component>2</Component>
		</costList>
		<altitudeLayer>Building</altitudeLayer>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<WorkToBuild>1300</WorkToBuild>
			<MaxHitPoints>180</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<Cleanliness>-6</Cleanliness>
		</statBases>
		<size>(3,1)</size>
		<surfaceType>Item</surfaceType>
		<designationCategory>Production</designationCategory>
		<passability>PassThroughOnly</passability>
		<pathCost>70</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<recipes>
			<li>MakeGlass</li>
			<li>MakeMolotov</li>
		</recipes>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<comps>
			<li Class="CompProperties_Refuelable">
				<fuelConsumptionRate>80.0</fuelConsumptionRate>
				<fuelCapacity>100.0</fuelCapacity>
				<fuelFilter>
				  <thingDefs>
					<li>WoodLog</li>
				  </thingDefs>
				</fuelFilter>
				<consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
			</li>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>ToolCabinet</li>
				</linkableFacilities>
			</li>
			<li Class="CompProperties_Glower">
				<glowRadius>2</glowRadius>
				<glowColor>(210,112,33,0)</glowColor>
			</li>
			<li Class="CompProperties_HeatPusher">
				<compClass>CompHeatPusherPowered</compClass>
				<heatPerSecond>14</heatPerSecond>
			</li>
			<li Class="CompProperties_Breakdownable"/>
		</comps>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
			<heatPerTickWhileWorking>0.7</heatPerTickWhileWorking>
		</building>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
		<researchPrerequisites><li>GlassworksResearch</li></researchPrerequisites>
	</ThingDef>
  
  	<ThingDef ParentName="BuildingBase">
		<defName>ReinforcedGlassworkTable</defName>
		<label>reinforced glassworks</label>
		<thingClass>Building_WorkTable</thingClass>
		<description>A table used for turning normal glass into safety glass.</description>
		<graphicData>
			<texPath>Things/Building/Production/ReinforcedGlassworkTable</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1,1)</drawSize>
		</graphicData>
		<costList>
				<Steel>40</Steel>
				<Glass>8</Glass>
				<Component>10</Component>
		</costList>
		<altitudeLayer>Building</altitudeLayer>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<WorkToBuild>900</WorkToBuild>
			<MaxHitPoints>180</MaxHitPoints>
			<Flammability>1.0</Flammability>
		</statBases>
		<size>(1,1)</size>
		<surfaceType>Item</surfaceType>
		<designationCategory>Production</designationCategory>
		<passability>PassThroughOnly</passability>
		<pathCost>70</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<recipes>
			<li>MakeReinforcedGlass</li>
		</recipes>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<startElectricalFires>true</startElectricalFires>
				<basePowerConsumption>100</basePowerConsumption>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>ToolCabinet</li>
				</linkableFacilities>
			</li>
			<li Class="CompProperties_Glower">
				<glowRadius>1</glowRadius>
				<glowColor>(210,112,33,0)</glowColor>
			</li>
			<li Class="CompProperties_HeatPusher">
				<compClass>CompHeatPusherPowered</compClass>
				<heatPerSecond>12</heatPerSecond>
			</li>
			<li Class="CompProperties_Breakdownable"/>
		</comps>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
			<heatPerTickWhileWorking>0.2</heatPerTickWhileWorking>
		</building>
		<researchPrerequisites><li>ReinforcedGlassResearch</li></researchPrerequisites>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
	</ThingDef>

</Defs>